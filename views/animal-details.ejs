<!-- Animal Details  -->
<div class="section--sm section--top">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="animal-details-slider">
                    <% for(let i=0;i<data.images.length;i++){ %>
                        <div class="animal-details-slider__item">
                            <img
                                    src="<%= data.images[i] %>"
                                    alt="image"
                                    class="animal-details-slider__img"
                            />
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row g-4">
        <div class="col-md-7 col-lg-8 innerHtml">

        </div>
        <div class="col-md-5 col-lg-4">
            <div class="ps-xxl-5">
                <ul class="list" style="--gap: 1.5rem">
                    <li>
                        <div class="member-card">
                            <img
                                    src="/images/member-card-1.png"
                                    alt="image"
                                    class="member-card__img"
                            />
                            <div class="member-card__content align-items-start">
                                <h5 class="membership-card__title mb-2 text--white">Premium</h5>
                                <h4 class="membership-card__price mt-2">$108.59</h4>
                                <ul class="list list--base" style="--gap: .5rem;">
                                    <li class="text--white">20% Dsicount All Event</li>
                                    <li class="text--white">Allow 2 adult person</li>
                                </ul>
                                <a href="#" class="btn btn--md btn--base mt-4">Buy Ticket</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/2.3.4/purify.min.js"></script>
<script>
  const targetDiv = document.querySelector('.innerHtml');
  targetDiv.innerHTML = `<%- data.animalDetails %>`;
</script>
